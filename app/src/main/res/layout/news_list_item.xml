<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/article_layout_start"
        android:layout_marginStart="@dimen/article_layout_start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/title_text_size"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="This is an Article Title and it's really long so we can see all three lines and stuff"
            />

        <TextView
            android:id="@+id/article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/author_text_size"
            android:textColor="@color/textColorArticleAuthor"
            tools:text="Author Name"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/subtext_layout_start"
        android:layout_marginStart="@dimen/subtext_layout_start"
        android:layout_marginRight="@dimen/subtext_layout_end"
        android:layout_marginEnd="@dimen/subtext_layout_end">

        <TextView
            android:id="@+id/date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/subtext_size"
            android:textColor="@color/colorPrimary"
            tools:text="Article Date"
            />

        <TextView
            android:id="@+id/section_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/subtext_size"
            android:textColor="@color/colorPrimary"
            tools:text="Section"
            />

    </RelativeLayout>

</LinearLayout>